<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="12dp"
        >
        <ImageView
            android:id="@+id/imgAnhTruyen"
            android:src="@drawable/t1"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <TextView
            android:id="@+id/txvTenChap"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#A8000000"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:textColor="#fff"
            android:text="Truyen tranh"
            android:textSize="12dp"
            />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:layout_marginTop="8dp">
        <ImageView
            android:layout_width="40px"
            android:layout_height="14dp"
            android:background="@drawable/like"
            android:backgroundTint="#F35369"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/txvCountLike"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="30"
            android:layout_marginLeft="18dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/eye"
            android:layout_marginLeft="48dp" />

        <TextView
            android:id="@+id/txvCountView"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="260"
            android:layout_marginLeft="72dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txvTenTruyen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:text="Ten truyen"
        android:textSize="14dp"
        android:textColor="#000" />

</LinearLayout>