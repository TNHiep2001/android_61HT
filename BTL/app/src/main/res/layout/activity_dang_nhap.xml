<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DangNhapActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/robot"></ImageView>

        <EditText
            android:id="@+id/dkdangnhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawableRight="@drawable/baseline_person_24"
            android:ems="15"
            android:hint="Đăng Nhập"
            android:textSize="20dp"></EditText>

        <EditText
            android:id="@+id/dkpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawableRight="@drawable/baseline_password_24"
            android:ems="15"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="20dp"></EditText>

        <TextView
            android:id="@+id/dkquenmatkhau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="20dp"
            android:text="Quên mật khẩu"
            android:textColor="#000"
            android:textSize="15dp"></TextView>

        <Button
            android:id="@+id/dangnhap"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="#8BC34A"
            android:text="Đăng Nhập"
            android:textColor="#2196F3"
            android:textSize="16dp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/dangky"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="#8BC34A"
            android:text="Đăng Ký"
            android:textColor="#2196F3"
            android:textSize="16dp"
            android:textStyle="bold"></Button>

    </LinearLayout>
</RelativeLayout>