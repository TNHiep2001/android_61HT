<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#ff6122"
        android:gravity="center"
        android:layout_marginBottom="6dp">

        <ImageView
            android:id="@+id/tlbMenu"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/menu"
            android:layout_marginTop="13dp"
            app:tint="#fff" />

        <EditText
            android:id="@+id/edtTimKiem"
            android:background="@drawable/bg_edt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:hint="Nhập tên truyện"
            android:textColorHint="#fff"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="#fff"
            />

        <ImageView
            android:id="@+id/icDangNhap"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/ic_login"
            android:layout_marginTop="13dp"
            android:backgroundTint="#fff"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <GridView
        android:id="@+id/gdvDSTruyen"
        android:layout_width="match_parent"
        android:layout_height="610dp"
        android:numColumns="3">
    </GridView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="#ff6122">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@drawable/binoculars"
            android:backgroundTint="#fff"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="48dp" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/open_book"
            android:backgroundTint="#fff"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="118dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/robot"
            android:backgroundTint="#fff"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="188dp" />

        <ImageView
            android:id="@+id/save_truyen"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/diskette"
            android:backgroundTint="#fff"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="258dp" />

        <ImageView
            android:id="@+id/profileUser"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/user"
            android:backgroundTint="#fff"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="328dp" />

    </RelativeLayout>

</LinearLayout>